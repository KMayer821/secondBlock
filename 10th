using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp10
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int referenceNumber = random.Next(1,1000);
            Console.WriteLine(referenceNumber);
            bool multiple = false;
            int saveNumber = referenceNumber;
            int counterStep = 1;
            int numberStep = 2;

            while (!multiple)
            {
                int counter = 0;
                while (referenceNumber % 2 != 1)
                {
                    referenceNumber /= numberStep;
                    counter += counterStep;
                }
                if (referenceNumber == 1)
                {
                    Console.WriteLine(counter);
                    Console.WriteLine(saveNumber);
                    multiple = true;
                }
                saveNumber += 1;
                referenceNumber = saveNumber;
            }
        }
    }
}
