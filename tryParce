using System;

namespace ConsoleApp1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int userNumber;
            bool numberChecked = false;
            while (numberChecked == false)
            {
                Console.WriteLine("Введите число");
                numberChecked = TryToConvert(out userNumber);
            }
            Console.WriteLine("Число введено");
        }

        static bool TryToConvert(out int userNumber)
        {
            string userInput = Console.ReadLine();
            return (int.TryParse(userInput,out userNumber));
        }
    }
}
